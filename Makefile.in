CTDB_TEST_OBJ =  $(TALLOC_OBJ) $(TDB_OBJ) \
	@CTDB_SYSTEM_OBJ@ @LIBREPLACEOBJ@ $(EXTRA_OBJ) $(TEVENT_OBJ) $(SOCKET_WRAPPER_OBJ)


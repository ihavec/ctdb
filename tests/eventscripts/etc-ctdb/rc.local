get_proc ()
{
    case "$1" in
	net/bonding/*)
	    cat "$FAKE_PROC_NET_BONDING/${1##*/}"
	    ;;
	sys/net/ipv4/conf/all/arp_filter)
	    echo 1
	    ;;
	*)
	    echo "get_proc: \"$1\" not implemented"
	    exit 1
    esac
}


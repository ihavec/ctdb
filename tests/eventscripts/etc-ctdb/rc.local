# Use a "service" command in $PATH if one exists.
service ()
{
    if _t=$(which "service" 2>/dev/null) ; then
	"$_t" "$@"
    else
	_nice=""
	_service "$@"
    fi
}

nice_service ()
{
    if _t=$(which "service" 2>/dev/null) ; then
	nice "$_t" "$@"
    else
	_nice="nice"
	_service "$@"
    fi
}

